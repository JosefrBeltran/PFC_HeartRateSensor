                android:layout_height="wrap_content"
                android:text="Pulasciones por minuto:  "
                android:textSize="18sp"/>
            <TextView android:id="@+id/notification_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textSize="18sp"/>
